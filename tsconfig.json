{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./Reinvest",
    "strict": true,
    "paths": {
      "GenericAdapter": ["../shared/GenericAdapter"]
    },
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "Reinvest/**/*",
    "shared/**/*",
    "devops/**/handler.ts"
  ],
  "exclude": [
    "Reinvest/**/*.test.ts",
    "Reinvest/**/*.feature.ts",
    "node_modules",
    "tsconfig.json",
    "test/**/*",
    "serverless.ts",
    "devops/**/*"
  ]
}
