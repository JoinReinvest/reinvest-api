{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./Reinvest",
    "strict": true,
    "paths": {
      "Reinvest/*": ["./*"],
      "PostgreSQL/*": ["../shared/hkek-postgresql/*"],
      "SimpleAggregator/*": ["../shared/hkek-simple-aggregator/*"],
      "Container/*": ["../shared/hkek-container/*"],
      "IdGenerator/*": ["../shared/hkek-id-generator/*"],
      "TechnicalEvents/*": ["../shared/hkek-technical-events/*"],

      "ApiGateway/*": ["./ApiGateway/src/*"],
      "InvestmentAccounts/*": ["./InvestmentAccounts/src/*"],
      "LegalEntities/*": ["./LegalEntities/src/*"],
      "Identity/*": ["./Identity/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "Reinvest/**/*",
    "shared/**/*",
    "devops/**/handler.ts"
  ],
  "exclude": [
    "Reinvest/**/*.test.ts",
    "Reinvest/**/*.feature.ts",
    "node_modules",
    "tsconfig.json",
    "test/**/*",
    "serverless.ts",
    "devops/**/*",
    ".serverless/**/*"
  ]
}
